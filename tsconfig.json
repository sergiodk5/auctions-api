{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "module": "node16",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "isolatedModules": true,
        "sourceMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "coverage", "drizzle.config.ts"],
    "ts-node": {
        "files": true
    }
}
