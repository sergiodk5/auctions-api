{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "isolatedModules": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "coverage"],
    "ts-node": {
        "files": true
    }
}
