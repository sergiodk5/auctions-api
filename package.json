{
    "name": "ts-express",
    "version": "1.0.0",
    "main": "server.js",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --noEmit && tsx --watch src/server.ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "start": "node dist/server.js",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "type-check": "tsc --noEmit",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "Asterios Patsikas",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@eslint/js": "^9.24.0",
        "@tsconfig/node20": "^20.1.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.14",
        "@types/module-alias": "^2.0.4",
        "@types/node": "^22.14.0",
        "eslint": "^9.24.0",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-perfectionist": "^4.11.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.0",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.1",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.29.0"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^5.1.0",
        "module-alias": "^2.2.3"
    },
    "_moduleAliases": {
        "@": "./dist"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint",
            "prettier --check"
        ],
        "*.{json,yml,yaml,md}": [
            "prettier --check"
        ]
    }
}
