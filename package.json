{
    "name": "ts-express",
    "version": "1.0.0",
    "main": "server.js",
    "scripts": {
        "build": "tsc",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "dev": "tsc-watch --onSuccess \"node dist/server.js\"",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "start": "node dist/server.js",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "test:watch": "jest --watch",
        "test:unit": "jest --selectProjects unit",
        "test:integration": "jest --selectProjects integration",
        "test:integration:local": "docker-compose -f docker-compose.test.yml up -d && npm run test:integration && docker-compose -f docker-compose.test.yml down",
        "test:setup": "docker-compose -f docker-compose.test.yml up -d",
        "test:teardown": "docker-compose -f docker-compose.test.yml down -v",
        "type-check": "tsc --noEmit",
        "prepare": "husky"
    },
    "keywords": [],
    "author": "Asterios Patsikas",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@eslint/js": "^9.25.1",
        "@tsconfig/node20": "^20.1.5",
        "@types/bcryptjs": "^2.4.6",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/lodash": "^4.17.16",
        "@types/module-alias": "^2.0.4",
        "@types/node": "^22.14.0",
        "@types/nodemailer": "^6.4.17",
        "@types/nodemailer-sendgrid": "^1.0.3",
        "@types/pg": "^8.11.11",
        "@types/supertest": "^6.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/yamljs": "^0.2.34",
        "@typescript-eslint/eslint-plugin": "^8.31.0",
        "@typescript-eslint/parser": "^8.31.0",
        "drizzle-kit": "^0.31.0",
        "eslint": "^9.25.1",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-jest": "^28.11.0",
        "eslint-plugin-prettier": "^5.2.6",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.0",
        "prettier": "^3.5.3",
        "supertest": "^7.1.0",
        "ts-jest": "^29.3.1",
        "tsc-watch": "^6.2.1",
        "tsx": "^4.19.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.0"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "drizzle-orm": "^0.41.0",
        "drizzle-zod": "^0.7.1",
        "express": "^5.1.0",
        "inversify": "^7.0.0-alpha.5",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "module-alias": "^2.2.3",
        "nodemailer": "^7.0.3",
        "nodemailer-sendgrid": "^1.0.3",
        "pg": "^8.14.1",
        "rate-limiter-flexible": "^7.1.0",
        "redis": "^4.7.0",
        "reflect-metadata": "^0.2.2",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^11.1.0",
        "yamljs": "^0.3.0",
        "zod": "^3.24.3"
    },
    "_moduleAliases": {
        "@": "./dist"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint",
            "prettier --check"
        ],
        "*.{json,yml,yaml,md}": [
            "prettier --check"
        ]
    }
}
